<%= form_with(model: code, local: true) do |form| %>
  
<div class="col-xl-4 col-lg-6" style="padding-bottom: 25px !important">
        <div class="card" style="width: 18rem; ">
          <div class="card-header" >
            <h6 style="padding-top: 10px !important;">
                  <div style="color: #E27d60">Add Code</div>
                  <%= form.text_field :code %>
            </h6>
          </div>



  <p class="card-text">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p class="card-text">
    <%= form.label :facility_type %>
    <%= form.text_field :facility_type %>
  </p>

  <p class="card-text">
    <%= form.label :destination %>
    <%= form.text_field :destination %>
  </p>

  <p class="card-text">
    <%= form.label :company_id %>
    <%= form.text_field :company_id %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
