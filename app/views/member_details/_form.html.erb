
<%= simple_form_for(@member_detail) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<%= @old_member_detail %>
  <div class="form-inputs">
    <%= f.hidden_field :name, value: @old_member_detail['name'] %>
    <%= f.hidden_field :member_id, value: @old_member_detail['id'] %>
    <%= f.hidden_field :member_code, value: @old_member_detail['code'] %>
    <%= f.hidden_field :stype, value: 'UPDATE' %>
    <%= f.hidden_field :group_code, value: @old_member_detail['group_code'] %>
    <%= f.hidden_field :company, value: @old_member_detail['name'] %>
    <%= f.hidden_field :description, value: @old_member_detail['description'] %>
    <%= f.text_field :facility, value: @old_member_detail['facility_type'] %>
    <%= f.hidden_field :active, value: @old_member_detail['active'] %>
    <%= f.text_field :group_id, value: @group %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
