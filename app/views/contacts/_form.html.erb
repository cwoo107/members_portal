<%= form_with(model: contact, local: true) do |form| %>

      <div class="card card-body">
        <form>
          <div class="form-group">
            <%= form.text_field :contact_type, class: 'form-control', :placeholder => 'Contact Type' %>
          </div>

          <div class="form-group">
            <%= form.text_field :name, class: 'form-control',:placeholder => 'Name' %>
          </div>


          <div class="form-group">
            <%= form.text_field :phone, class: 'form-control',:placeholder => 'Phone' %>
          </div>

          <div class="form-group">
            <%= form.text_field :email, class: 'form-control',:placeholder => 'Email' %>
          </div>

          <%= form.hidden_field :code_id, :value => @code.id %>


          <div class="form-group">
            <div class="actions">
              <%= form.submit 'Submit', class: 'btn btn-success btn-block', type: "submit" %>
            </div>
          </div>
        </form>
      </div>
    </div>
<% end %>
