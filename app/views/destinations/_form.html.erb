
<%= simple_form_for(@destination) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :old_destination, input_html: {value: params['old_destination']}  %>
    <%= f.input :new_destination %>
    <%= f.hidden_field :code, value: params['code'] %>
    <%= f.hidden_field :member, value: params['member'] %>
    <%= f.hidden_field :group_id, value: params['group'] %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
<br/>
  <div class="form-actions">
    <%= f.button :submit, 'Submit Request', class: 'btn btn-info'%>
  </div>
<% end %>
