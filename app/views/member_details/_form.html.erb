
<%= simple_form_for(@member_detail) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :member_id %>
    <%= f.input :member_code %>
    <%= f.input :stype %>
    <%= f.input :group %>
    <%= f.input :company %>
    <%= f.input :description %>
    <%= f.input :facility %>
    <%= f.input :active %>
    <%= f.association :group %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
